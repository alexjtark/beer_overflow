<h1>Comment</h1>
<ul>
<%= form_for([@answer, @answer_comment]) do |f| %>
    <li>
      <%= f.label :content %>
      <%= f.text_field :content %>
    </li>
      <%= f.hidden_field :parent_id, :value => @answer.id %>
      <%= f.hidden_field :parent_type, :value => @answer.class %>
    <li>
      <%= f.submit %>
    </li>
  <% end %>
</ul>