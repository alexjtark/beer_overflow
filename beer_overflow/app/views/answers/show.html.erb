<div id="answer-username">
  <p>
    <%= answer.responder.username %> answered:
  </p>
</div>

<div>
  <%= answer.content %>
</div>

<% if current_user != nil && current_user.id == @question.asker.id %>
<%= @question.asker.id  %>
  <%= form_for(@question) do |f| %>
    <% f.hidden_field :best_answer_id, :value => answer.id %>
    <%= f.submit "Best Answer" %>
  <% end %>
<% end %>




<p><%= link_to 'Comment', {:controller => "answer_comments", :action => "new", :answer_id => answer.id}%></p>

